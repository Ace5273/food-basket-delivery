{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist-server/",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "commonjs",
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "@remult/core": [
        "../radweb/projects/radweb"
      ],
      "@remult/server": [
        "../radweb/projects/radweb-server"
      ],
      "@remult/server-postgres": [
        "../radweb/projects/radweb-server-postgres"
      ],
      "*": [
        "node_modules/*"
      ]
    }
  },
  "files": [
    "./src/app/server/server.ts",
    "./src/app/server/doSomething.ts"
  ]
}